---

const {firstname, lastname, email, phone, locationcity, locationcountry, picture} = Astro.props;
---
<section class="w-md h-[32rem] bg-secondary rounded-2xl shadow-2xl overflow-hidden flex flex-col p-8 transition hover:scale-105 hover:shadow-deezer duration-300">
        <div class="flex flex-col h-full justify-between items-center">
                <div class="w-32 h-32 mb-4 relative">
                        <img src={picture} alt="user picture" class="rounded-full w-full h-full object-cover border-4 border-tertiary shadow-lg" />
                        <span class="absolute bottom-2 right-2 bg-tertiary rounded-full w-5 h-5 border-2 border-white flex items-center justify-center">
                                <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 24 24"><circle cx="12" cy="12" r="12"/></svg>
                        </span>
                </div>
                <h2 class="text-2xl font-bold text-white mb-2 tracking-wide">{firstname} {lastname}</h2>
                <div class="flex flex-col gap-3 w-full items-center">
                        <p class="text-lg text-white font-semibold flex items-center gap-2">
                                <svg class="w-5 h-5 text-quaternary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M16 12a4 4 0 1 1-8 0 4 4 0 0 1 8 0z"/><path d="M12 2v2m0 16v2m8-10h2m-18 0H2m15.364-7.364l1.414 1.414M4.222 19.778l1.414-1.414M19.778 19.778l-1.414-1.414M4.222 4.222l1.414 1.414"/></svg>
                                {email}
                        </p>
                        <p class="text-lg text-white font-semibold flex items-center gap-2">
                                <svg class="w-5 h-5 text-quaternary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M22 16.92V19a2 2 0 0 1-2.18 2A19.86 19.86 0 0 1 3 5.18 2 2 0 0 1 5 3h2.09a2 2 0 0 1 2 1.72c.13 1.13.37 2.24.72 3.31a2 2 0 0 1-.45 2.11l-1.27 1.27a16 16 0 0 0 6.58 6.58l1.27-1.27a2 2 0 0 1 2.11-.45c1.07.35 2.18.59 3.31.72a2 2 0 0 1 1.72 2z"/></svg>
                                {phone}
                        </p>
                        <p class="text-lg text-white font-semibold flex items-center gap-2">
                                <svg class="w-5 h-5 text-quaternary" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path d="M21 10c0 6-9 13-9 13S3 16 3 10a9 9 0 1 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
                                {locationcity}, {locationcountry}
                        </p>
                </div>
                <div class="mt-6 flex gap-3">
                        <button class="bg-tertiary hover:bg-primary text-white font-semibold px-5 py-2 rounded-full shadow transition">Suivre</button>
                        <button class="bg-white text-tertiary font-semibold px-5 py-2 rounded-full shadow transition border-2 border-transparent hover:border-tertiary">Message</button>
                </div>
        </div>
</section>